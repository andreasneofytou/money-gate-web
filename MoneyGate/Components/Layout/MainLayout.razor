@inherits LayoutComponentBase

<div class="drawer lg:drawer-open">
    <input id="menu-drawer" type="checkbox" class="drawer-toggle"/>
    <div class="drawer-content flex flex-col max-h-screen overflow-y-auto flex-grow">
        <label for="menu-drawer" aria-label="open sidebar" class="btn btn-square btn-ghost lg:hidden self-start">
            <span class="material-icons">
                menu
            </span>
        </label>
        <div class="sm:p-10 m bg-base-200 overflow-y-auto min-h-screen">
            @Body
        </div>
    </div>
    <div class="drawer-side min-h-full bg-base-300">
        <label for="menu-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
        <div class="p-5 text-5xl font-bold">MoneyGate</div>
        <div class="flex flex-col flex-grow justify-between">
            <div>
                <ul class="menu w-80 p-4 text-base-content space-y-1">
                    <li>
                        <NavLink href="/products" ActiveClass="text-primary">Products</NavLink>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>